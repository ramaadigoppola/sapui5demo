<mvc:View controllerName="BasicFiori-Routing.controller.HelloPanel"
	xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
	<Panel headerText="{i18n>helloPanelTitle}" class="sapUiResponsiveMargin"
		width="auto">
		<content>
			<Button text="{i18n>openDialogButtonText}" press="onOpenDialog" icon="sap-icon://activate"
				class="sapUiSmallMarginEnd" />
			<Button text="{i18n>showHelloButtonText}" press="onShowHello"
				class="myCustomButton" />

			<Input value="{/recipient/name}" description="Hello {/recipient/name}"
				valueLiveUpdate="true" width="60%" class="sapUiSmallMargin" />

			<Text text="Hello {/recipient/name}"
				class="sapUiSmallMargin sapThemeHighlight-asColor myCustomText" />
		</content>
	</Panel>

</mvc:View>